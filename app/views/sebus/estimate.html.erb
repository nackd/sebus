<div data-role="header">
  <h1>Estimaciones</h1>
  <a data-rel="back" data-icon="back">Atr√°s</a>
</div>

<div data-role="content">
  <div id="stop">
    <p id="number"><strong><%= @stop.number %></strong></p>
    <h2 id="name"><%= @stop.name %></h2>
  </div>
  <ul data-role="listview">
    <% @estimate.each do |line, estimation| %>
      <li data-role="list-divider">
        <h3><%= line %></h3>
      </li>
      <li>
        <div class="ui-grid-a">
          <div class="ui-block-a">
            <p><strong>
                <%= (m = estimation.first[:time]).nil? ? "No hay estimaciones" : "#{m} minutos" %>
              </strong></p>
            <p>
              <%= (d = estimation.first[:distance]).nil? ? "" : "#{d} metros" %>
            </p>
          </div>
          <div class="ui-block-b">
            <p><strong>
                <%= (m = estimation.last[:time]).nil? ? "" : "#{m} minutos" %>
              </strong></p>
            <p>
              <%= (d = estimation.last[:distance]).nil? ? "" : "#{d} metros" %>
            </p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
